<h2><%= t('.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <div class="col-sm-7">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: t('activerecord.attributes.user.new_password') %><br />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-7">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t('activerecord.attributes.user.password_confirmation') %><br />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
<%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

