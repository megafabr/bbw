<h2><%= t('.sign_in') %></h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class="col-sm-7">
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email',
                        class: "form-control" %><br />
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-7">
      <%= f.password_field :password, autocomplete: "current-password", autocomplete: "off",
                           class: "form-control", placeholder: t('activerecord.attributes.user.password') %><br />
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="col-sm-6"
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit t('.sign_in'), class: 'btn btn-primary' %><br /><br />
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>