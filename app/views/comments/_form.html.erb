<%= form_for [@event, comment] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: comment} %>

  <div class="form-group">
    <%#= f.label :body %>
    <%= f.text_area :body, class: 'form-control', placeholder: 'Body' %>
  </div>

  <% unless user_signed_in? %>
    <div class="form-group">
      <%#= f.la, placeholder: 'Name'bel :user_name %>
      <%= f.text_field :user_name, class: 'form-control', placeholder: 'User name' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Отправить', class: 'btn btn-primary' %>
  </div>
<% end %>
